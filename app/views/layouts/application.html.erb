<!DOCTYPE html>
<html>
  <head>
    <title>BasicRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>

    <%= link_to 'Login', login_path unless current_user %>
    <%= link_to 'Logout', logout_path if current_user %>
    <%= link_to 'Change Password', new_account_change_password_path if current_user %>
    <%= link_to 'Reset Password', new_account_reset_password_path if current_user %>
  </body>
</html>
