<ul>
  <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
  <% end %>
</ul>

<div class="container">
  <%= form_for @user, url: account_change_password_index_path, html: {class: 'form-horizontal'} do |f| %>
      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Enter password' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit :submit, class: 'btn btn-default' %>
        </div>
      </div>
  <% end %>
</div>
