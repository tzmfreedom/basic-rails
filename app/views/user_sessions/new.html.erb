<ul>
  <% @user_session.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<div class="container contents">
  <%= form_for @user_session, url: login_url, html: {class: 'form-horizontal'} do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label class="control-label"><%= f.check_box :remember_me %>Remember Me</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit :submit %>
        </div>
      </div>
  <% end %>
</div>
